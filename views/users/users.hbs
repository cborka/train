<table class="list">
{{#each data}}
        <tr>
            <td class="list">{{login}}</td>
            <td class="list">{{phone}}</td>
            <td class="list"><a href="/users/select/{{id}}" > >>> </a></td>
            <td><button hidden type="button" onclick='show_user({{id}})'>Изменить</button></td>
        </tr>
{{/each}}
</table>
<div id="hint" ></div>

<script>
function show_user(id)
{
  document.getElementById("hint").innerHTML="Пользователь: "+id;
}
</script>